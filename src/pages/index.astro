---
import Greetings from "@/components/Greetings.svelte";
import Layout from "../layouts/Layout.astro";
import { playlists } from "@/components/lib/data";
import PlayListItemCard from "@/components/PlayListItemCard.astro";
---

<Layout title="Player">
    <div
        id="playlist-container"
        class="relative transition-all duration-1000 bg-blue-400 dark:bg-green-600 h-full"
    >
        <div class="relative z-10 px-6 pt-10 h-full">
            <Greetings />
            <div class="flex flex-wrap mt-6 gap-4">
                {
                    playlists.map((playlist) => (
                        <PlayListItemCard playlist={playlist} />
                    ))
                }
            </div>

            <div
                class="absolute inset-0 bg-gradient-to-t from-slate-200 via-slate-200/80 dark:from-slate-800 dark:via-slate-800/80 -z-[1] h-full"
            >
            </div>
        </div>
    </div>
</Layout>
